@model MvcGrid.Models.Staff
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Düzenle</h2>
<br />
@using (Html.BeginForm())
{

    <div class="input-group">
        <span class="input-group-addon" id="txt_ad"><i class="glyphicon glyphicon-user"></i></span>
        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "Adınızı Giriniz", aria_describedby = "txt_ad" })
    </div>
    <br />
    <div class="input-group">
        <span class="input-group-addon" id="txt_soyad"><i class="glyphicon glyphicon-user"></i></span>
        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "Soyadını Giriniz", aria_describedby = "txt_soyad" })
    </div>
    <br />
    <div class="input-group">
        <span class="input-group-addon" id="txt_yas"><i class="glyphicon glyphicon-time"></i></span>
        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "Yaşınızı Giriniz", aria_describedby = "txt_yas" })
    </div>
    <br />
    <div class="input-group">
        <span class="input-group-addon" id="txt_ulke"><i class="glyphicon glyphicon-globe"></i></span>
        @Html.DropDownListFor(x => x.Country.Id, (List<SelectListItem>)ViewBag.Countries, new { @class = "form-control", aria_describedby = "txt_ulke" })
    </div>
    <br />

    <input type="submit" class="btn btn-success" value="Kaydet" />
    @Html.HiddenFor(x=>x.Id)
}